<?xml version="1.0"?>
<config>
    <modules>
        <FACTFinder_Suggest>
            <version>0.1.0</version>
        </FACTFinder_Suggest>
    </modules>
    <global>
        <models>
            <factfinder_suggest>
                <class>FACTFinder_Suggest_Model</class>
            </factfinder_suggest>
        </models>
        <blocks>
            <factfinder_suggest>
                <class>FACTFinder_Suggest_Block</class>
            </factfinder_suggest>
            <xmlconnect>
                <rewrite>
                    <catalog_search_suggest>FACTFinder_Suggest_Block_XmlConnect_Catalog_Search_Suggest</catalog_search_suggest>
                </rewrite>
            </xmlconnect>
        </blocks>
        <helpers>
            <factfinder_suggest>
                <class>FACTFinder_Suggest_Helper</class>
            </factfinder_suggest>
        </helpers>
    </global>
    <frontend>
        <routers>
            <factfinder_suggest>
                <use>standard</use>
                <args>
                    <module>FACTFinder_Suggest</module>
                    <frontName>ff_suggest</frontName>
                </args>
            </factfinder_suggest>
        </routers>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <addActivationLayoutHandles>
                        <class>factfinder_suggest/observer</class>
                        <method>addSuggestHandles</method>
                    </addActivationLayoutHandles>
                </observers>
            </controller_action_layout_load_before>
        </events>
        <layout>
            <updates>
                <factfinder_suggest>
                    <file>factfinder/suggest.xml</file>
                </factfinder_suggest>
            </updates>
        </layout>
    </frontend>
</config>